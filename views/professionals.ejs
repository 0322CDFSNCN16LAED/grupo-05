<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ("./partials/head.ejs")  %>
</head>
<body>
  <header>
    <%- include ("./partials/header-nav.ejs") %>
</header>
    <main>
      <!--tiene que existir profesion-->
      <div class="aqua-gradient tittle d-flex justify-content-center align-items-center">
        <h1 class="text-white">Encontra los mejores profesionales en <%=servicios.profesion%></h1>
       </div>


<section class="d-flex wrap just">
  <% servicios.forEach(servicio => {%>
    <article class="card-p container-fluid d-flex just">
      <div class=" w-100 row">
        <div class="card mb-3 col">
          <div class="row">
            <div class="p-0 col-md-3 w">

              
                <img src="/images/avatars/<%= servicio.user.profilePicture %> " class="img-fluid rounded-start h-100" alt="...">
              

              
              </div>
              
            <div class="col-md-9">
            <div class="card-body p-1 m-0 jus">
              <h5 class="card-title d-flex just border-b"><%= servicio.user.fullName %> </h5>
            
              <div class="pofessions d-flex wrap border-b">
                <ul></ul>
                  <li class=" list-style mr-10"><span class="m-0" ><%= servicio.category.name %> </span></li>
                </ul>
              </div>
              <p class="card-text "><%= servicio.jobDescription %> </p>
              <p class="fst-italic gray-light border-b border-t"> Precios de visita: <%= servicio.price %> </p>
              <div class="d-flex just">
                <a href="/user/service-detail/<%=servicio.id%> "> <input type="submit" class="btn btn-danger mb-2 text-center" value="Ver perfil"></a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    </article> 
    <%  }); %> 
  </section>


    </main>
    <footer class="bg-dark text-center text-white">
      <%- include ("./partials/footer.ejs")  %>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
        </body>
      </html>