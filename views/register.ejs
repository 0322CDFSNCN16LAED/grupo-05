<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ("./partials/head.ejs")  %> 
</head>
<body class="">
    <%- include ("./partials/header-nav.ejs") %>
    <section class="container p-15  text-ceter">
      <div class="d-flex justify-content-center ">
        <h3 class="m-20">Registrate</h3>
      </div>

      <form class="p-15 form-outline" method="POST" action="/user/register" >
        <div class="row mb-4 ">
          <div class="col-12 col-xl-6 mt-4">
            <div class="form-group">
              <label><b>Nombre completo:</b></label>
              <input 
                type="text" 
                name="fullname" 
                class="form-control"
                value="<%= locals.oldData && oldData.fullname ? oldData.fullname : null %>"
              >
              <% if (locals.errors && errors.fullname) { %>
                <div class="text-danger">
                 <p> <%= errors.fullname.msg %> </p>
                </div>
              <% } %>
            </div>
          </div>
          <div class="col-12 col-xl-6 mt-4">
            <div class="form-group">
              <label><b>Email:</b></label>
              <input 
                type="text" 
                name="email" 
                class="form-control"
                value="<%= locals.oldData && oldData.email ? oldData.email : null %>"
              >
              <% if (locals.errors && errors.email) { %>
                <div class="text-danger">
                 <p></p> <%= errors.email.msg %> </p>
                </div>
              <% } %>
            </div>
          </div>
          <div class="col-12 col-xl-6 mt-4">
            <div class="form-group">
              <label><b>Telefono</b></label>
              <input 
                type="text" 
                name="phone" 
                class="form-control"
                value="<%= locals.oldData && oldData.phone ? oldData.phone : null %>"
              >
              <% if (locals.errors && errors.phone) { %>
                <div class="text-danger">
                 <p> <%= errors.phone.msg %> </p>
                </div>
              <% } %>
            </div>
          </div>
          <div class="col-12 col-xl-6 mt-4">
            <div class="form-group">
              <label><b>Contraseña</b></label>
              <input 
                type="text" 
                name="password" 
                class="form-control"
                value=" "
              >
              <% if (locals.errors && errors.password) { %>
                <div class="text-danger">
                 <p> <%= errors.password.msg %> </p>
                </div>
              <% } %>
            </div>
          </div>
          <div class="col-12 col-xl-6 mt-4">
            <div class="form-group">
              <label><b>Confirme la contraseña</b></label>
              <input 
                type="text" 
                name="password-confirmation" 
                class="form-control"
                value=" "
              >
            </div>
          </div>        
      
        <!-- Submit button -->
        <div class="tex-center d-flex just ">
          <button type="submit" class="btn btn-danger mb-4 mt-4">Registrate</button>
        </div>
        
        <!-- Register buttons -->
        <div class="text-center ">
          <p> o registrate con:</p>
          <button type="button" class="btn btn-danger btn-floating mx-1 mb-4">
            <i class="fab fa-facebook-f"></i>
          </button>
      
          <button type="button" class="btn btn-danger btn-floating mx-1 mb-4">
            <i class="fab fa-google"></i>
          </button>
      
          <button type="button" class="btn btn-danger btn-floating mx-1 mb-4">
            <i class="fab fa-twitter"></i>
          </button>
      
          <button type="button" class="btn btn-danger btn-floating mx-1 mb-4">
            <i class="fab fa-github"></i>
          </button>
        </div>
      
    </section>
    <%- include ("./partials/footer.ejs")  %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
</body>
</html>


