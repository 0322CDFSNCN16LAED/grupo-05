<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ("./partials/head.ejs")  %>
</head>
<body class="">
  <header>
    <%- include ("./partials/header-nav.ejs") %>
</header>
    <section>
      <section class="w-100 p-0 m-0">
        <div class="row ">
          <%- include ("./partials/account-header.ejs") %>
              
              <section class=" col-xl-9 d-flex wrap just">
                <% services.forEach(servicio => {%>

                  <% if (servicio.nombre == locals.userLogged.fullname) {%>
                  <article class="card-p container-fluid d-flex just">
                    <div class="  row">
                      <div class="card mb-3 col">
                        <div class="row">
                          <div class="p-0 col-md-3 w">
              
                            <% if(servicio.imagen) { %>
                              <img src="/images/avatars/<%= servicio.imagen %> " class="img-fluid rounded-start h-100" alt="...">
                            <%} else {%>  
                              <img src="/images/default.jpg" class="img-fluid rounded-start h-100" alt="...">
                             <%}%> 
              
                            
                            </div>
                            
                          <div class="col-md-9">
                          <div class="card-body p-1 m-0 jus">
                            <h5 class="card-title d-flex just border-b"><%= servicio.nombre %> </h5>
                          
                            <div class="pofessions d-flex wrap border-b">
                              <ul></ul>
                                <li class=" list-style mr-10"><span class="m-0" ><%= servicio.category.name %> </span></li>
                              </ul>
                            </div>
                            <p class="card-text "><%= servicio.jobDescription %> </p>
                            <p class="fst-italic gray-light border-b border-t"> Precios de referencia: $<%= servicio.price %> </p>
                            <div class="d-flex just">
                              <form action="/user/modify-service/<%=servicio.id%>" method="GET">
                                <input type="submit" class="btn btn-danger mb-2 text-center" value="Modificar">
                              </form>
                              <form action="/user/my-service/<%=servicio.id%>?_method=DELETE" method="POST">
                                <input type="submit" class="btn btn-danger mb-2 text-center" value="Eliminar">
                              </form>  
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  </article>
                  <%}%> 
                  <%  }); %> 
                
                </section>
              
        
      </section>
    </section>
        
    <footer class="bg-dark text-center text-white">
      <%- include ("./partials/footer.ejs")  %>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
        </body>
      </html>