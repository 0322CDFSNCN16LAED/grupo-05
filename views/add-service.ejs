<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ("./partials/head.ejs")  %>
</head>
<body>
    <header>
        <%- include ("./partials/header-nav.ejs") %>
    </header>
    <section class="w-100 p-0 m-0 prueba">
      <div class="row col-xxl-12">
        <%- include ("./partials/account-header.ejs") %>

    <div class="m-center col-xl-9 col-xxl-9 mb-4 mt-4 ">
      <section class="container ">
          <h3>Agregar servicios </h3>
          <hr>
          <form action="/user/add-service" method="POST" enctype="multipart/form-data">
          <div>
            <label for="profesion">Selecciona una profesion</label> 
            <select class="form-select m-center mb-4 mt-4" aria-label="Default select example" name="profesion">
              <option value="Electricista">Electricista</option>
              <option value="Plomero">Plomero</option>
              <option value="Gasista">Gasista</option>
              <option value="Carpintero">Carpintero</option>
              <option value="Herrero">Herrero</option>
              <option value="Tec. Aire">Tec. Aire</option>
              <option value="Seguridad">Seguridad</option>
              <option value="">Niñera</option>
              <option value="Pintor">Pintor</option>
              <option value="Albañil">Albañil</option>
              <option value="Jardineria">Jardineria</option>
              <option value="Tec. Pc">Tec. Pc</option>
              <option value="Mudanza">Mudanza</option>
            </select>
          </div>
          <div>
            <input type="precio" class="form-control" id="precio" placeholder="Precio de visita">
          </div>
          <div class="input-group mt-4 mb-4">
            <input type="file" class="form-control" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" aria-label="Upload" name="imagen">
            <button class="btn btn-danger" type="button" id="inputGroupFileAddon04">Agregar</button>
          </div> 
          <div class="form-floating d-flex justify-content-center ">
            <textarea class="form-control mb-4" id="floatingTextarea" name="descripcion" ></textarea>
            <label for="floatingTextarea">Escribe una breve descripcion...</label>
          </div>
          <div class="text-center p-15 ">
            <input type="submit" value="Agregar" class="btn btn-danger mt-4 mb-4">
          </div>
          </form>
      </section>
      </div>
    </section>
        
    <footer>
        <%- include ("./partials/footer.ejs")  %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
    </footer>
</body>
</html>

