<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ("./partials/head.ejs")  %>
</head>
<body>
    <header>
        <%- include ("./partials/header-nav.ejs") %>
    </header>
    <section class="w-100 p-0 m-0">
      <div class="row ">
        <%- include ("./partials/account-header.ejs") %>
        <div class="m-center col-xl-9 col-xxl-9 mb-4 mt-4 ">
          <section class="container ">
            <h3>Solicitud de servicios pendientes</h3><hr>
          </section>
        </div>
        <section class="just d-flex">
          <div class="card ">
            <div class="card-header text-white bg-danger mb-1">
              Selicitud de servicio
            </div>
            <div class="card-body">
              <p>Profesional:</p>
              <p>Rubro:</p>
              <p>Precio</p>
              <p>Fecha y hora:</p>
              <p>Estado:</p>
              <a href="#" class="btn btn-danger">Confirmar visita</a>
            </div>
          </div>
        
        </section>

          <div class="p-0 col-xl-9">
            <div>
              <% for (let i = 0; i < usuario.solicitations.length; i ++) { %> 
                <h3> profesional: <%= profesional[i].user.fullName %> </h2>
                <p> categoria del servicio: <%= profesional[i].category.name %> </p>
                <p> precio: <%= profesional[i].price %> </p>
                <p> fecha solicitada: <%= usuario.solicitations[i].serviceDate %> </p>
                <p> estado de la solicitud: <%= usuario.solicitations[i].solicitationState %> </p>

              <% } %> 
            </div>

      </div>
      </div>
      </section>
      <footer class="bg-dark text-center text-white">
        <%- include ("./partials/footer.ejs")  %>
      </footer>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
          </body>
        </html>
