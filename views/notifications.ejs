<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ("./partials/head.ejs")  %>
</head>
<body>
    <header>
        <%- include ("./partials/header-nav.ejs") %>
    </header>
    <section class="w-100 p-0 m-0">
      <div class="row ">
        <%- include ("./partials/account-header.ejs") %>
            <div class="m-center col-xl-9 col-xxl-9 mb-4 mt-4 ">
              <section class="container ">
                <h3>Notificaciones</h3><hr>
              </section>
            </div>


          <section class="just d-flex">
            <div class="card ">
              <div class="card-header text-white bg-danger mb-1">
                Selicitud de servicio
              </div>
              <div class="card-body">
                <p>Solicitante:</p>
                <p>Direccion:</p>
                <p>Fecha y hora:</p>
                <p>Estado:</p>
                <a href="#" class="btn btn-danger">Confirmar visita</a>
              </div>
            </div>
            
          </section>
            
            
          
            <% for (let i = 0; i < servicios.length; i++) { %>
              <% if(servicios[i].solicitations.length > 0) { %> 
                <% for (let j = 0; j < servicios[i].solicitations.length; j++) { %>
                  <h3> pide el servicio: <%= cliente[j].fullName %>  </h3>
                  <p>  direccion del servicio: <%= cliente[j].address[0].direccion %> </p>
                  <p>  fecha solicitada: <%= servicios[i].solicitations[j].serviceDate %> </p>
                  <p>  estado del servicio: <%= servicios[i].solicitations[j].solicitationState %> </p>
                <% } %>
              <% } %>
            <% } %> 
          </div>


      </div>
      </section>
      <footer class="bg-dark text-center text-white">
        <%- include ("./partials/footer.ejs")  %>
      </footer>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
          </body>
        </html>